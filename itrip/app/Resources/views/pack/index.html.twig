{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="content">
        <h3>Les Packs</h3>
        <form  action="{{ path('search')  }}" method="GET">
            <div class="input-group" id="adv-search">
                <input type="text" name="loc" class="form-control" placeholder="Rechercher un voyage" />
                <div class="input-group-btn">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></input>
                    </div>
                </div>
            </div>
        </form>
        
        {% for pack in packs %}
        <div class="col-12 margin-bottom ">
            <a class="clikable" href="{{pack.lien}}">
                <div class="card black hover-ani">
                    <div class="row no-gutters">
                        <div class="col-4">
                            <img class="card-img-top img_voyage hidden-sm-down" src="{{ asset('img/pack/'~pack.id~'/thumbnail.jpg') }}" alt="Card image cap">
                        </div>
                        <div class="col-8 ">
                            <div class="card-block">
                                <h4 class="text-center list-group-item blue">{{pack.nom}}</h4>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item black">Date : {{pack.dateDebut|date("m/d/Y")}} au {{pack.dateFin|date("m/d/Y")}}</li>
                                    <li class="list-group-item black">Prix : <span class="">{{pack.prix}} â‚¬</span></li>
                                    <li class="list-group-item black">Nombre de partcipant : {{pack.nbPersonne}}</li>
                                    <li class="list-group-item black">Description : <small>{{pack.description}}</small></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
{% block stylesheets %}
<style>
.card{
    margin: 10px;
    border:1.5px;
    
    border-style:solid;
    
    
}

.img_voyage{
    width: 100%;
    height: 100%;
    
}

.margin-bottom{
    margin-bottom: 30px;
}
</style>
{% endblock %}
    
