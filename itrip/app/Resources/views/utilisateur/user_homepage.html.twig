{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="content">
        <h3>Mes Voyages<a href="{{ path('voyage_new') }}"><i class="fa fa-plus float-right" aria-hidden="true"></i> <small class="float-right blue" >Crée un nouveau voyage</small></a></h3>
        {% for voyage in voyages %}
        <div class="col-12 margin-bottom ">
            <a class="clikable" href="{{ path('voyage_show', { 'id': voyage.id }) }}">
                <div class="card black hover-ani">
                    <div class="row no-gutters">
                        <div class="col-4">
                            <img class="card-img-top img_voyage hidden-sm-down" src="{{ asset('img/placeholder.png') }}" alt="Card image cap">
                        </div>
                        <div class="col-8 ">
                            <div class="card-block">
                                <h4 class="text-center list-group-item blue">{{voyage.nom}}</h4>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item black">Location : {{voyage.locationName}}</li>
                                    <li class="list-group-item black">Date : {{voyage.dateDebut|date("m/d/Y")}} au {{voyage.dateFin|date("m/d/Y")}}</li>
                                    <li class="list-group-item black">Cagnotte : <span class="">{{voyage.value}} €</span></li>
                                    <li class="list-group-item black">Description : <small>{{voyage.description}}</small></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
        <h3>Suggestion</h3>
        {{ include('/pack/display_packs.html.twig') }}
    </div>
</div>
{% endblock %}



{% block stylesheets %}
<style>


.card{
    margin: 10px;
    border:1.5px;
    
    border-style:solid;
    
    
}

.img_voyage{
    width: 100%;
    height: 100%;
    
}

.margin-bottom{
    margin-bottom: 30px;
}

</style>
{% endblock %}

